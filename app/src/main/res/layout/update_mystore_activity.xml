<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edDiscription"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/edit_background"
        android:drawableStart="@drawable/ic_baseline_book"
        android:ems="10"
        android:hint="Item Discription"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_above="@+id/edDiscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="-72dp"
        android:background="@drawable/edit_background"
        android:drawableStart="@drawable/ic_local_phone"
        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPrice"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_above="@+id/edDiscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="-108dp"
        android:background="@drawable/edit_background"
        android:drawableStart="@drawable/ic_attach_money"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edItemName"
        android:layout_width="373dp"
        android:layout_height="34dp"
        android:layout_above="@+id/edDiscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_shopping_cart_24"
        android:ems="10"
        android:hint="Item Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_below="@+id/edPrice"
        android:layout_alignStart="@id/edPrice"
        android:layout_alignTop="@id/edPrice"
        android:layout_alignRight="@id/edPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="127dp"
        android:layout_marginRight="94dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Update"
        android:textColor="#218c79"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="127dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>